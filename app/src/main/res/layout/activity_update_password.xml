<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/noActionBarr"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".UpdatePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_bg"
        android:orientation="vertical"
        android:paddingEnd="12dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kanit_medium"
            android:text="Update"
            android:textColor="#3f4658"
            android:textSize="38sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/kanit_regular"
            android:text="Don't forget your password again"
            android:textColor="#E43F4658"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/update_new_pass"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_edit"
            android:drawableStart="@drawable/ic_account"
            android:drawablePadding="3dp"
            android:hint="New Pass"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="7dp"
            tools:ignore="LabelFor" />


        <EditText
            android:id="@+id/update_repass"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_edit"
            android:drawableStart="@drawable/ic_lock"
            android:hint="@string/password1233"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="7dp"
            android:drawablePadding="3dp"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/btn_update_pass"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_login"
            android:text="@string/log_in123"
            android:textColor="#ffff"
            android:textSize="16sp" />


    </LinearLayout>


</LinearLayout>