<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeksiKI.ValidasiRateSeksiKIFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineAmbientShadowColor="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Validasi Rate"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:padding="2dp"
                android:layout_marginVertical="30dp">
                <TableRow
                    android:background="@drawable/border">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="No"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:text="Nama Cust"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:text="Pelayanan/Tgl"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="Rate"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:text="Validasi Perjanjian"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:background="@drawable/border"
                    android:backgroundTint="#fff">

                    <TextView
                        android:id="@+id/no_schedule_time_supervisor"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:text="01"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nama_cust_supervisor"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="aaa"
                        android:background="@drawable/border"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="aaa"
                        android:background="@drawable/border"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/border"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/rate_seksiKI"
                            style="@style/MyRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:numStars="5"
                            android:isIndicator="false"
                            android:progressTint="#E7FA00"
                            android:scrollbarSize="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:background="@drawable/border"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_tolak_seksiKI"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:backgroundTint="#22CAB4"
                            android:text="Tolak"
                            android:textColor="#FFFFFF"
                            android:textSize="8dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_terima_seksiKi"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:backgroundTint="#E19E2B"
                            android:text="Terima"
                            android:textColor="#FFFFFF"
                            android:textSize="8dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>