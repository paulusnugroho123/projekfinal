<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:theme="@style/noActionBarr"
    android:orientation="vertical"
    tools:context=".SettingProfileActivity">

    <ImageButton
        android:id="@+id/setting_gambar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_launcher_background"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:src="@drawable/ic_launcher_foreground"
        tools:ignore="ContentDescription,MissingConstraints" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Change Photo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:paddingEnd="12dp"
        tools:ignore="MissingConstraints,RtlSymmetry"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="161dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            android:background="@drawable/rounded_edit"
            android:drawablePadding="3dp"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:hint="Name"
            android:importantForAutofill="no"
            android:paddingStart="7dp"
            tools:ignore="LabelFor,TextFields" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="@string/email12"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/email_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            android:background="@drawable/rounded_edit"
            android:drawablePadding="3dp"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:hint="Email"
            android:importantForAutofill="no"
            android:paddingStart="7dp"
            tools:ignore="LabelFor,TextFields" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="Unit"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/pas_old_pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            android:background="@drawable/rounded_edit"
            android:drawablePadding="3dp"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:hint="Unit"
            android:importantForAutofill="no"
            android:paddingStart="7dp"
            tools:ignore="LabelFor,TextFields"  />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:text="Edit Password"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pass_new_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:textColor="#000"
            android:background="@drawable/rounded_edit"
            android:textSize="15sp"
            android:hint="Edit Password"
            android:importantForAutofill="no"
            android:paddingStart="7dp"
            tools:ignore="LabelFor,TextFields"/>


        <Button
            android:id="@+id/setting_profile"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login"
            android:text="@string/done12"
            android:textColor="#ffff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
